{
  "name": "pos-g4",
  "version": "1.0.0",
  "description": "Restaurant POS System - Phase 1 MVP",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:web\"",
    "dev:server": "cd server && npm run dev",
    "dev:web": "cd web && npm run dev",
    "build": "npm run build:server && npm run build:web",
    "build:server": "cd server && npm run build",
    "build:web": "cd web && npm run build",
    "postinstall": "npm install --prefix server && npm install --prefix web",
    "install:all": "npm install && cd server && npm install && cd ../web && npm install",
    "lint": "npm run lint:server && npm run lint:web",
    "lint:server": "cd server && npm run lint",
    "lint:web": "cd web && npm run lint",
    "type-check": "npm run type-check:server && npm run type-check:web",
    "type-check:server": "cd server && npm run type-check",
    "type-check:web": "cd web && npm run type-check"
  },
  "keywords": [
    "pos",
    "restaurant",
    "point-of-sale",
    "mvp"
  ],
  "author": "POS Team",
  "license": "MIT",
  "dependencies": {
    "@libsql/client": "^0.15.15",
    "axios": "^1.7.2",
    "bcryptjs": "^2.4.3",
    "connect-sqlite3": "^0.9.16",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.19.2",
    "express-session": "^1.17.3",
    "express-validator": "^7.2.1",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "nanoid": "^5.0.6",
    "sqlite3": "^5.1.6",
    "typescript": "^5.5.4"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/connect-sqlite3": "^0.9.5",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.17.8",
    "@types/morgan": "^1.9.7",
    "@types/node": "^20.0.0"
  }
}
